{
    "compilerOptions": {
      "module": "commonjs",             
      "target": "es2017",
      "strict": true,
      "moduleResolution": "node",
      "noImplicitAny":true,
      "noUnusedLocals":true,
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
      "src/*": ["src/*"]
    }
    },
    "include": ["src/**/*"]
  }
  